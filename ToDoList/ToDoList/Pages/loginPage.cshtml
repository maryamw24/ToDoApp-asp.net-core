@page
@model ToDoList.Pages.loginPageModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url(../images/loginBg.png);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-size: cover;
            background-position: center;
        }

        .login-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 90%;
            max-width: 700px;
            height: auto;
            padding: 2rem;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            position: relative;
        }

        .login-container {
            flex: 1;
            padding: 2rem;
            width: 100%;
            max-width: 500px;
        }

        .login-container h2 {
            margin-bottom: 1.5rem;
        }

        .login-container .form-control {
            border-radius: 8px;
            padding-left: 2.5rem;
        }

        .login-container .btn {
            border-radius: 8px;
            background-color: #004aad;
            border: none;
            color: #fff;
        }

        .login-container .btn:hover {
            background-color: #f39c12;
        }

        .form-control-icon {
            position: relative;
        }

        .form-control-icon .icon {
            position: absolute;
            left: 0.75rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .btn-back-home {
            position: absolute;
            top: 0.75rem;
            left: 0.75rem;
            font-size: 1.5rem; 
            border-radius: 50%; 
            background-color: transparent;
            border: none;
            color: #f39c12;
            padding: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn-back-home:hover {
            color: #e67e22; 
            background-color: rgba(243, 156, 18, 0.1);
        }

        @@media (max-width: 768px) {
            .login-wrapper {
                width: 95%;
                padding: 1rem;
            }

            .login-container {
                padding: 1rem;
            }

            .btn-back-home {
                top: 0.5rem;
                left: 0.5rem;
                font-size: 1.25rem;
                padding: 0.25rem;
            }
        }

        @@media (max-width: 576px) {
            .login-wrapper {
                width: 95%;
                padding: 0.5rem;
                border-radius: 0;
                box-shadow: none;
            }

            .login-container {
                padding: 0.5rem;
            }

            .btn-back-home {
                top: 0.25rem;
                left: 0.25rem;
                font-size: 1rem;
                padding: 0.25rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <a href="/Index" class="btn-back-home">
            <i class="fas fa-home"></i>
        </a>
        <div class="login-container">
            <h2 class="text-center">Login</h2>
            <form method="post" asp-page-handler="Login">
                <div class="mb-3 form-control-icon">
                    <i class="fas fa-user icon"></i>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" asp-for="Username" required>
                </div>
                <div class="mb-3 form-control-icon">
                    <i class="fas fa-lock icon"></i>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" asp-for="Password" required>
                </div>
                <button type="submit" class="btn w-100">Login</button>
                <div class="text-center mt-2">
                    <span>Don't have an account?</span> <a href="/SignUp">Sign Up</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
